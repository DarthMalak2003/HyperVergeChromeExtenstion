{
    "manifest_version": 3,
    "name": "Digital Notice Board",
    "version": "1.0",
    "description": "A digital notice board with Google Slide integration and Pomodoro Timer.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "permissions": ["storage", "activeTab", "scripting"]
  }
  